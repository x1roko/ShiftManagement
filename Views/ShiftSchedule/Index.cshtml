@model IEnumerable<ShiftManagement.Models.ShiftSchedule>
@{
    ViewData["Title"] = "Смены";
}

<h2>Расписание смен</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Сотрудник</th>
            <th>Дата</th>
            <th>Время начала</th>
            <th>Время окончания</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var shift in Model)
    {
        <tr>
            <td>@shift.Employee?.FirstName @shift.Employee?.LastName</td>
            <td>@shift.ShiftDate.ToShortDateString()</td>
            <td>@shift.StartTime.ToString("hh\\:mm")</td>
            <td>@shift.EndTime.ToString("hh\\:mm")</td>
            <td>@shift.Status</td>
            <td>
                <a asp-action="Edit" asp-route-id="@shift.Id" class="btn btn-sm btn-primary">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@shift.Id" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>
